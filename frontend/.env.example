# =============================================================================
# PERSONA SSO FRONTEND - Environment Variables (Production Template)
# =============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env files with real credentials to version control

# Shopify App Credentials (from Partner Dashboard)
SHOPIFY_API_KEY=your-shopify-api-key
SHOPIFY_API_SECRET=your-shopify-api-secret

# App URL (your production domain)
SHOPIFY_APP_URL=https://your-production-domain.com

# Scopes required by the app
SCOPES=read_products,write_products,read_customers,write_customers

# Redis (for sessions)
REDIS_URL=redis://localhost:6379

# Backend API URL (your backend service)
IDP_BACKEND_URL=https://your-backend-domain.com

# OAuth Callback URL (backend SSO callbacks)
OAUTH_CALLBACK_URL=https://your-backend-domain.com

# Encryption key (generate with: openssl rand -hex 16)
ENCRYPTION_KEY=generate-a-32-char-hex-string

# Session secret (generate with: openssl rand -base64 32)
SESSION_SECRET=generate-a-strong-session-secret

# Environment
NODE_ENV=production
