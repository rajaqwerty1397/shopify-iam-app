# =============================================================================
# PERSONA SSO - Environment Variables (Production Template)
# =============================================================================
# Copy this file to .env and fill in your production values
# NEVER commit .env files with real credentials to version control

# Application
NODE_ENV=production
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=warn
APP_URL=https://your-production-domain.com

# PostgreSQL
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# Redis
REDIS_URL=redis://localhost:6379

# Encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=generate-a-64-char-hex-string-using-openssl-rand-hex-32
PASSWORD_PEPPER=generate-a-strong-random-pepper-string

# Shopify (from Shopify Partner Dashboard)
SHOPIFY_API_KEY=your-production-shopify-api-key
SHOPIFY_API_SECRET=your-production-shopify-api-secret
SHOPIFY_SCOPES=customer_read_companies,customer_write_companies,customer_write_customers,customer_read_customers
SHOPIFY_APP_URL=https://your-production-domain.com
SHOPIFY_APP_HANDLE=your-app-handle

# OAuth Callback URL (optional - defaults to SHOPIFY_APP_URL)
OAUTH_CALLBACK_URL=https://your-production-domain.com

# Session (generate with: openssl rand -base64 48)
SESSION_SECRET=generate-a-strong-random-session-secret-min-32-chars

# Email (SendGrid SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.sendgrid.net
MAIL_PORT=587
MAIL_USERNAME=apikey
MAIL_PASSWORD=your-sendgrid-api-key
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME=Your App Name

# Groq AI (optional - for Smart Analytics)
GROQ_API_KEY=your-groq-api-key
